<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Epiksoft Results</Title>
    <Company>Epiksoft</Company>
    <Description>A result library to return any type of result instead of throwing exceptions</Description>
    <PackageProjectUrl>https://github.com/Epiksoft/Results</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Epiksoft/Results</RepositoryUrl>
    <Authors>Mehmet Kekeç, Emre Özgenç</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Ⓒ 2023 Epiksoft</Copyright>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
  </ItemGroup>

</Project>
